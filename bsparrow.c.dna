//So that we handle all events in a single function, we save the immediate events so as to be sent out
//by bsparrow_wait.
  if(!only_output) {
    bsparrow_immediate_event(bsp, bspev);
    if(bspev-%gtevent != 0) {
      return 0;
    }
  }

