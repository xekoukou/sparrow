  }
  //New connection.
  if((ev %gt%gt 4) & 1) {
    bspev-%gtbsock = bsparrow_socket_accept(bsp, spev.sock);
    bspev-%gtid = bspev-%gtbsock-%gtid;
    bspev-%gtevent = 16;
    return 0;
  }

  return 1;
}


